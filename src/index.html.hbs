---

{{> header }}

  <div class="home">

  <section class="section content introduction">
   <div class="flexrow">
     <div class="flexrow-item introduction-text">
       <h1 class="title">{{__ 'main title'}}</h1>
       <h2 class="main-subtitle">{{__ 'main subtitle'}}</h1>
        <a href="#kitsu-video" class="toggleModal button button--with-icon is-large">
          <img src="/images/play.svg" alt=""><span>{{__ 'kitsu watch cta'}}</span>
